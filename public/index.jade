doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		//- meta(http-equiv="X-UA-Compatible", content="IE=Edge,chrome=1")
		//- meta(http-equiv="Content-Script-Type", content="text/javascript")
		title Crusader Market
		//- library or plugin css files
		//- Latest compiled and minified CSS
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css", media="screen")
		//- Latest compiled and minified JavaScript
		script(src="//code.jquery.com/jquery-1.11.2.min.js")
		script(src="/lib/angular.min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")
		script(src="/lib/ui-bootstrap-tpls-0.12.0.min.js")
		script(src="/lib/underscore-min.js")
		//-
		script(src="/js/modal.js")
		script(src="/js/app.js")
		//- user define stylesheets
		link(rel='stylesheet', href='/css/style.css')
	body(style="padding-top:6px", ng-controller="MainCtrl")
		.container#header
			.page-header(style="margin:0")
				h1
					| Crusader Market
					small  v0.1.0
		.container
			ul.nav.nav-tabs
				li(role="presentation").active
					a(href="javascript:;") 파티
				//- li(role="presentation", ng-click="deselectType()", ng-class="{ active: currType === '비교' }")
				//- 	a(href="javascript:;") 비교

			.container-fluid.table-bordered(style="border-top-color: transparent;")
				.row(style="margin-top:20px")
					.col-md-4
						table.table.table-bordered(style="width:282px")
							colgroup
								col(width="16.66%")
								col(width="16.66%")
								col(width="16.66%")
								col(width="16.66%")
								col(width="16.66%")
								col(width="16.66%")
							tbody
								tr(style="height:80px")
									td.ac.va_m.clickable(colspan="2", ng-click="rmParty(2)") {{party[2]['이름']}}
									td.ac.va_m.clickable(colspan="2", ng-click="rmParty(1)") {{party[1]['이름']}}
									td.ac.va_m.clickable(colspan="2", ng-click="rmParty(0)") {{party[0]['이름']}}
								tr(style="height:40px")
									td.ac.va_m
									td.ac.va_m
									td.ac.va_m
									td.ac.va_m
									td.ac.va_m
									td.ac.va_m

					.col-md-8
						table.table.table-bordered(style="height:240px")
							colgroup
								col(width="156px")
								col(width="*")
							tbody
								tr(style="height:33.33%")
									th.ac.va_m {{party[0]['이름']}}
									td.ac.va_m(bold-keyword) {{party[0]['패시브']}}
								tr(style="height:33.33%")
									th.ac.va_m {{party[1]['이름']}}
									td.ac.va_m(bold-keyword) {{party[1]['패시브']}}
								tr(style="height:33.33%")
									th.ac.va_m {{party[2]['이름']}}
									td.ac.va_m(bold-keyword) {{party[2]['패시브']}}

		.container(style="margin-top:20px;margin-bottom:56px")
			ul.nav.nav-tabs
				li(role="presentation", ng-click="deselectType()", ng-class="{ active: currType === '전체' }")
					a(href="javascript:;") 전체
				li(role="presentation", ng-repeat="type in classTypes track by $index", ng-click="selectType(type)", ng-class="{ active: currType === type }")
					a(href="javascript:;") {{type}}

			.container-fluid.table-bordered(style="border-top-color: transparent;")
				table.table.table-bordered(style="margin-top:24px")
					colgroup
						//- 아이콘
						col(width="60px")
						//- 이름
						col(width="156px")
						//- 등급
						col(width="46px")
						//- 클래스
						col(width="80px")
						//- 공격력
						col(width="60px")
						//- 체력
						col(width="60px")
						//- 치명타 확률
						col(width="60px")
						//- 물리 방어력
						col(width="60px")
						//- 마법 저항력
						col(width="60px")
						//- 블록 스킬
						col(width="*")
						//- 패시브 타입
						col(width="60px")
						//- 패시브
						col(width="*")
					thead
						tr
							th.ac.va_m 아이콘
							th.ac.va_m 이름
							th.ac.va_m 등급
							th.ac.va_m 클래스
							th.ac.va_m 공격력
							th.ac.va_m 체력
							th.ac.va_m 치명타 확률
							th.ac.va_m 물리 방어력
							th.ac.va_m 마법 저항력
							th.ac.va_m(ng-show="showDesc") 블록 스킬
							th.ac.va_m(ng-show="showDesc") 패시브 타입
							th.ac.va_m(ng-show="showDesc") 패시브
					tbody
						tr.clickable(ng-repeat="warrior in warriors | filter:filterWarrior",
								ng-click="selectWarrior(warrior)", ng-class="{ info: warrior.isSelected }")
							td.ac.va_m {{}}
							td.ac.va_m {{warrior['이름']}}
							td.ac.va_m ★×{{warrior['등급']}}
							td.ac.va_m {{warrior['클래스']}}
							td.ac.va_m {{warrior['공격력']}}
							td.ac.va_m {{warrior['체력']}}
							td.ac.va_m {{warrior['치명타 확률']}}
							td.ac.va_m {{warrior['물리 방어력']}}
							td.ac.va_m {{warrior['마법 저항력']}}
							td(bold-keyword, ng-show="showDesc") {{warrior['블록 스킬']}}
							td.ac.va_m(ng-show="showDesc") {{warrior['패시브 타입']}}
							td(bold-keyword, ng-show="showDesc") {{warrior['패시브']}}

		#footer

		nav.navbar.navbar-default#layer_fixed.va_m
			.container-fluid
				form.navbar-form.navbar-right(role="search")
					.form-group.m-lr-4
						button.btn.btn-default(type="button", aria-label="Left Align", ng-click="showDesc=true", ng-show="!showDesc")
							span.glyphicon.glyphicon-eye-open(aria-hidden="true")
							|  스킬 보기
						button.btn.btn-default(type="button", aria-label="Left Align", ng-click="showDesc=false", ng-show="showDesc")
							span.glyphicon.glyphicon-eye-close(aria-hidden="true")
							|  스킬 닫기
					.form-group.m-lr-4
						button.btn.btn-default(type="button", aria-label="Left Align", ng-click="openDiff(party)", ng-disabled="!party.length")
							span.glyphicon.glyphicon-stats(aria-hidden="true")
							|  비교
					.form-group.m-lr-4
						button.btn.btn-default(type="button", aria-label="Left Align", ng-click="deselectAll()", ng-disabled="!party.length")
							span.glyphicon.glyphicon-unchecked(aria-hidden="true")
							|  선택 해제
					.form-group.m-lr-4
						label(for="filterWarrior").hide Warrior
						input.form-control(type="text", id="filterWarrior", placeholder="Find Warrior...", ng-model="filterWarrior")
					a.btn.btn-default(href="#header", aria-label="Left Align")
						span.glyphicon.glyphicon-triangle-top(aria-hidden="true")
					a.btn.btn-default(href="#footer", aria-label="Left Align")
						span.glyphicon.glyphicon-triangle-bottom(aria-hidden="true")
