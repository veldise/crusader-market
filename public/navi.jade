						|  스킬 보기
					button.btn.btn-default.mg-lr-4(type="button", aria-label="Left Align", ng-click="showDesc=false", ng-show="showDesc")
						span.glyphicon.glyphicon-eye-close(aria-hidden="true")
						|  스킬 닫기
				.form-group
					button.btn.btn-default.mg-lr-4(type="button", aria-label="Left Align", ng-click="openDiff(shared.party)", ng-disabled="!shared.party.length")
						span.glyphicon.glyphicon-stats(aria-hidden="true")
						|  비교
					button.btn.btn-default.mg-lr-4(type="button", aria-label="Left Align", ng-click="deselectAll()", ng-disabled="!shared.party.length")
						span.glyphicon.glyphicon-unchecked(aria-hidden="true")
						|  선택 해제
				.form-group.mg-lr-4
					label(for="searchText").hide Search
					input.form-control(type="text", id="searchText", placeholder="Search", ng-model="searchText")
